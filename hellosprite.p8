__lua__
-- wall and actor collisions
-- by zep

actor = {} --all actors in world
box = {}

-- make an actor
-- and add to global collection
-- x,y means center of the actor
-- in map tiles (not pixels)
function make_actor(x, y)
 a={}
 a.x = x
 a.y = y
 a.dx = 0
 a.dy = 2
 a.spr = 33
 a.frame = 0
 a.t = 0
 a.inertia = 0.6
 a.bounce  = 1
 a.frames=0
 a.isBox = false
 
 -- half-width and half-height
 -- slightly less than 0.5 so
 -- that will fit through 1-wide
 -- holes.
 a.w = 0.4
 a.h = 0.4
 
 add(actor,a)
 
 return a
end

function _init()
 -- make player top left
 --pl = make_actor(2,2)
 box = make_actor(128/2, 128/2)
 box.spr = 19
 box.dy = 0
 box.isBox = true

end

function move_actor(a)

 -- only move actor along x
 -- if the resulting position
 -- will not overlap with a wall

 
  a.x += a.dx
  
 

 -- ditto for y

 
  a.y += a.dy
 
 

 
end

function _update60()
 --control_player(pl)
 
 t = time()

    if t % 0.5 == 0 and rnd(1) < 0.5 then
        make_actor(rnd(118)+5,0)
        make_actor(128/2,0)
    end



 foreach(actor, move_actor)

 foreach(actor, remove_actor)



end

function remove_actor(a)
    if a.y > 128 then
        del(actor, a)
    end
end

function is_collide(a, b)
    dx = abs((a.x + 0.5*a.w) - (b.x + 0.5 * b.w))
    dy = abs((a.y + 0.5*a.h) - (b.y + 0.5 * b.h))
    return dx <= 0.5*(a.w + b.w) or dy < 0.5*(a.h + b.h)
end

function draw_actor(a)
    if a ~= box and is_collide(a, box) then
        del(actor, a)
    else
        local sx = (a.x)
        local sy = (a.y)
        spr(a.spr + a.frame, sx, sy)
    end
end

function _draw()
 cls()

-- map(0,0,0,0,16,16)
    foreach(actor,draw_actor)
 
-- print("x "..pl.x,0,120,7)
-- print("y "..pl.y,64,120,7)
 print("actor? "..#actor,0,120,7)
end

