pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

s=0

x=10
y=10
fx=false
fy=false
move_speed = 0.5
walking_anim_time_gap=0

function control_player()
 if (btn(1)) then 
   x += move_speed
   fx=false
   walking_animation()
   --s=2
 end
 if (btn(0)) then 
   x -= move_speed
   fx=true
   walking_animation()
   --s=0
 end
end

function walking_animation()

 if time()-walking_anim_time_gap>0.2 then
	s=s+2
	walking_anim_time_gap=time()

	 if s>2 then s=0 end

 end
  
 

end


function _update60()

 control_player()

 

end

function _draw()
	cls()
	map()
	spr(s,x,y,2,2,fx,fy)	
end

